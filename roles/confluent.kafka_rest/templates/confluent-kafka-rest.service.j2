[Unit]
Description=A REST proxy for Apache Kafka
Documentation=http://docs.confluent.io/
After=network.target confluent-kafka.target

[Service]
Type=simple
{% if kafka_rest_user != '' %}
User={{ kafka_rest_user }}
{% endif %}
{% if kafka_rest_group != '' %}
Group={{ kafka_rest_group }}
{% endif %}
Environment="LOG_DIR=/var/log/confluent/kafka-rest"
ExecStart={{ kafka_rest.server_start_file }} {{ kafka_rest.config_file }}
LimitNOFILE=100000
TimeoutStopSec=180
Restart=no

[Install]
WantedBy=multi-user.target
[Unit]
Description=RESTful Avro schema registry for Apache Kafka
Documentation=http://docs.confluent.io/
After=network.target confluent-kafka.target

[Service]
Type=simple
{% if schema_registry_user != '' %}
User={{ schema_registry_user }}
{% endif %}
{% if schema_registry_group != '' %}
Group={{ schema_registry_group }}
{% endif %}
Environment="LOG_DIR=/var/log/confluent/schema-registry"
ExecStart={{ schema_registry.server_start_file }} {{ schema_registry.config_file }}
TimeoutStopSec=180
Restart=no

[Install]
WantedBy=multi-user.target